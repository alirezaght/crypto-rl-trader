{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Run FastAPI Server",
            "program": "${workspaceFolder}/src/server.py",
            "console": "integratedTerminal",
            "env": {
                "UVICORN_RELOAD": "true"
            },
            "args": [
                "--host", "0.0.0.0",
                "--port", "8000"
            ]
        },

      {
        "type": "debugpy",
        "request": "launch",
        "name": "Launch Main Program",
        "program": "${workspaceFolder}/${input:programPath}",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/.env"
      }
    ],
    "inputs": [
      {
        "type": "pickString",
        "id": "programPath",
        "description": "Select the Python file to debug",
        "options": [
          "src/main.py",
          "src/server.py",
          "src/train.py"
        ]
      }

    ]
  }